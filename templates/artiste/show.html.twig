{% extends 'base.html.twig' %}

{% block body %}
	<section style="background-color: #0e0e0e; color: white;">


		<section style="margin: 20px;">
			<div style="text-align:center; border:black 1px solid;">
				<h2>{{ artiste.prenom }}
					{{ artiste.nom }}</h2>

				<div>
					<img style="height: auto; width: 200px;" src="{{ asset('upload/'~artiste.image) }}" class="card-img-top" alt="...">
				</div>
			</div>
			<div>
				<p>Genre:
					{{ artiste.genre }}</p>

				<p>DESCRIPTION:</p>
				<p>{{ artiste.description }}</p>
			</div>

		</section>

		<section style="margin: 20px;">


			{% if app.user %}
				{% include "comment/_form.html.twig" %}
			{% endif %}

			{% for commentaire in artiste.comments %}
				<article style="display: flex; margin-top: 15px; background-color: #FFE083;">

					<div style="padding: 5px; background-color: #FFD559;">
						<img style="height:150px; width:150; background-color: white;" src="{{asset('upload/'~app.user.profilePicture)}}">
					</div>

					<div style="width: 100%; margin: 5px;">
						<div style="display: flex; justify-content: space-between; padding: 5px; background-color: #ffc107;">
							<p>Post√© par:
								{{ commentaire.pseudo.username }}</p>
							<p>Le
								{{ commentaire.createdAt|date("d/m/Y")}}</p>
						</div>

						<div style=" width: 100%; height: 60%; margin-top: 5px; padding: 5px; background-color: #ffd148;">
							<p>
								{{ commentaire.commentaire }}</p>
						</div>
					</div>

				</article>

			{% endfor %}

		</section>
	</section>
{% endblock %}
